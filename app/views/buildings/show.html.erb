<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @building.building_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @building.price %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @building.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @building.building_age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @building.info %>
</p>

<hr>

<% n = 0 %>
<% @station_infos.each do |station_info| %>

  <h3>最寄り駅<%= n += 1 %></h3>
  <p>
    <strong>路線名:</strong>
    <%= station_info.station_route %>
  </p>

  <p>
    <strong>駅名:</strong>
    <%= station_info.closest_station_name %>
  </p>

  <p>
    <strong>徒歩分数:</strong>
    <%= station_info.walk_time %>
  </p>

<% end %>

<%= link_to '編集', edit_building_path(@building) %> |
